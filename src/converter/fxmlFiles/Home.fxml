<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="background" stylesheets="@../cssFiles/Home.css"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="converter.HomeController">
    <center>
        <AnchorPane prefHeight="400.0" prefWidth="600.0">
            <children>
                <Pane fx:id="mainPane" layoutX="99.0" layoutY="74.0" prefHeight="251.0" prefWidth="401.0"
                      styleClass="pane" stylesheets="@../cssFiles/Home.css">
                    <children>
                        <Label fx:id="label" layoutX="25.0" layoutY="39.0" prefHeight="50.0" prefWidth="352.0"
                               text="Choose a file to convert" textAlignment="CENTER" textOverrun="CLIP">
                            <font>
                                <Font name="Century Gothic" size="29.0"/>
                            </font>
                        </Label>
                        <Button fx:id="bChoose" defaultButton="true" layoutX="111.0" layoutY="156.0"
                                mnemonicParsing="false" prefHeight="39.0" prefWidth="179.0"
                                stylesheets="@../cssFiles/Home.css"
                                text="Choose file">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Button>
                    </children>
                </Pane>
                <Pane fx:id="infoPane" layoutX="112.0" layoutY="83.0" prefHeight="232.0" prefWidth="379.0"
                      styleClass="infoPane" stylesheets="@../cssFiles/Home.css">
                    <children>
                        <Button fx:id="close" layoutX="151.0" layoutY="173.0" mnemonicParsing="false" prefHeight="32.0"
                                prefWidth="73.0" text="Close"/>
                        <Label layoutX="30.0" layoutY="20.0" prefHeight="169.0" prefWidth="314.0" styleClass="infoLabel"
                               stylesheets="@../cssFiles/Home.css"
                               text="Please choose a txt file with mold data organized. This converter will clean extra data and prepare a new file."
                               textAlignment="CENTER" wrapText="true"/>
                    </children>
                </Pane>
                <Button fx:id="info" layoutX="527.0" layoutY="14.0" mnemonicParsing="false" prefHeight="32.0"
                        prefWidth="59.0" styleClass="buttonInfo" stylesheets="@../cssFiles/Home.css"
                        text="Info">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
