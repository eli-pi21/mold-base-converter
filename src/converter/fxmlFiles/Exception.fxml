<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane prefHeight="300.0" prefWidth="400.0" styleClass="background"
            stylesheets="@../cssFiles/Exception.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="converter.controllers.ExceptionController">
    <center>
        <AnchorPane prefHeight="300.0" prefWidth="400.0">
            <children>
                <Pane layoutX="15.0" layoutY="12.0" prefHeight="235.0" prefWidth="369.0" styleClass="pane"
                      stylesheets="@../cssFiles/Exception.css">
                    <children>
                        <Label fx:id="label" layoutX="66.0" layoutY="26.0" prefHeight="128.0" prefWidth="231.0"
                               stylesheets="@../cssFiles/Exception.css"
                               text="An exception occurred. Try again."
                               textAlignment="CENTER" wrapText="true"/>
                        <Button fx:id="moreDetails" layoutX="124.0" layoutY="177.0" mnemonicParsing="false"
                                styleClass="exceptionPane" stylesheets="@../cssFiles/Exception.css"
                                text="More details"/>
                    </children>
                </Pane>
                <Button fx:id="home" layoutX="98.0" layoutY="256.0" mnemonicParsing="false"
                        stylesheets="@../cssFiles/Exception.css"
                        text="Home"/>
                <Button fx:id="exit" layoutX="233.0" layoutY="256.0" mnemonicParsing="false" prefHeight="34.0"
                        prefWidth="72.0" stylesheets="@../cssFiles/Exception.css" text="Exit"/>
                <ScrollPane fx:id="scrollPane" layoutX="20.0" layoutY="23.0" prefHeight="214.0" prefWidth="350.0"
                            stylesheets="@../cssFiles/Exception.css">
                    <content>
                        <AnchorPane maxHeight="1.7976931348623157E308" minHeight="220.0" minWidth="350.0"
                                    styleClass="scroll-pane" stylesheets="@../cssFiles/Exception.css">
                            <children>
                                <Label fx:id="exceptionDetails" layoutX="6.0" layoutY="1.0"
                                       maxHeight="1.7976931348623157E308" styleClass="details"
                                       stylesheets="@../cssFiles/Exception.css" text="Label"
                                       wrapText="true"
                                       AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                       AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                            </children>
                        </AnchorPane>
                    </content>
                </ScrollPane>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
